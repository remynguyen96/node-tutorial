{{#each categories}}
<div class="row">
  {{#each this}}
    <div class="col m3">
       <div class="card blue-grey darken-1">
         <div class="card-content white-text">
           <span class="card-title">{{this.title}}</span>
           <p>{{this.description}}</p>
         </div>
         <div class="card-action">
           <a class="btn waves-effect waves-light" href="categories/{{this.slug}}">This is a link</a>
         </div>
       </div>
    </div>
  {{/each}}
</div>
{{/each}}
